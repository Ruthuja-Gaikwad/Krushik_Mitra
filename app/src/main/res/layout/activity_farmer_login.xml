<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/background_image"
    tools:context=".FarmerLoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Card container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:elevation="6dp"
            android:padding="24dp"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="8dp"
            android:gravity="center">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/farmer_login"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="24dp" />

            <!-- Input Fields -->
            <EditText
                android:id="@+id/et_farmer_name"
                style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                android:hint="@string/enter_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/et_farmer_mobile"
                style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                android:hint="@string/enter_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/et_farmer_address"
                style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                android:hint="@string/enter_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:layout_marginBottom="12dp"/>

            <Spinner
                android:id="@+id/spinner_location"
                style="@style/CommonSpinner"
                android:entries="@array/location_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/et_farmer_area"
                style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                android:hint="@string/enter_land_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:layout_marginBottom="12dp"/>

            <Spinner
                android:id="@+id/spinner_soil_type"
                style="@style/CommonSpinner"
                android:entries="@array/soil_types"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/et_farmer_npk"
                style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                android:hint="@string/enter_npk_values"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginBottom="12dp"/>

            <Spinner
                android:id="@+id/spinner_prev_crop"
                style="@style/CommonSpinner"
                android:entries="@array/previous_crops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/et_farmer_username"
                style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                android:hint="@string/enter_username"
                android:inputType="textEmailAddress"
                android:autofillHints="username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/et_farmer_password"
                style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                android:hint="@string/enter_password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>

            <!-- Submit Button -->
            <Button
                android:id="@+id/btn_farmer_submit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
            android:text="@string/login"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_button"/>

            <!-- Sign Up Text -->
            <TextView
                android:id="@+id/tv_farmer_signup"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
            android:text="Don't have an account? Sign up"
            android:textColor="@color/primaryColor"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
