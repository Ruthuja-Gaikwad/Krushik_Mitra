<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    tools:context=".GovtSchemesActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_govt_schemes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Government Subsidy Schemes"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Scheme Info -->
    <TextView
        android:id="@+id/tv_govt_schemes_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Explore government schemes available for farmers, including crop insurance and fertilizer subsidies."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_govt_schemes_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
